$env.config.show_banner = false

# Table display mode
$env.config.table.mode = "single"

# Nord Theme Configuration
def nord_theme [] {
    return {
        binary: '{{ .visual.nord.nord15 }}'
        block: '{{ .visual.nord.nord9 }}'
        cell-path: '{{ .visual.nord.nord5 }}'
        closure: '{{ .visual.nord.nord8 }}'
        custom: '{{ .visual.nord.nord7 }}'
        duration: '{{ .visual.nord.nord13 }}'
        float: '{{ .visual.nord.nord11 }}'
        glob: '{{ .visual.nord.nord7 }}'
        int: '{{ .visual.nord.nord15 }}'
        list: '{{ .visual.nord.nord8 }}'
        nothing: '{{ .visual.nord.nord11 }}'
        range: '{{ .visual.nord.nord13 }}'
        record: '{{ .visual.nord.nord8 }}'
        string: '{{ .visual.nord.nord14 }}'

        bool: {|| if $in { '{{ .visual.nord.nord8 }}' } else { '{{ .visual.nord.nord13 }}' } }

        datetime: {|| (date now) - $in |
            if $in < 1hr {
                { fg: '{{ .visual.nord.nord11 }}' attr: 'b' }
            } else if $in < 6hr {
                '{{ .visual.nord.nord11 }}'
            } else if $in < 1day {
                '{{ .visual.nord.nord13 }}'
            } else if $in < 3day {
                '{{ .visual.nord.nord14 }}'
            } else if $in < 1wk {
                { fg: '{{ .visual.nord.nord14 }}' attr: 'b' }
            } else if $in < 6wk {
                '{{ .visual.nord.nord8 }}'
            } else if $in < 52wk {
                '{{ .visual.nord.nord9 }}'
            } else { 'dark_gray' }
        }

        filesize: {|e|
            if $e == 0b {
                '{{ .visual.nord.nord5 }}'
            } else if $e < 1mb {
                '{{ .visual.nord.nord8 }}'
            } else { fg: '{{ .visual.nord.nord9 }}' }
        }

        shape_and: { fg: '{{ .visual.nord.nord15 }}' attr: 'b' }
        shape_binary: { fg: '{{ .visual.nord.nord15 }}' attr: 'b' }
        shape_block: { fg: '{{ .visual.nord.nord9 }}' attr: 'b' }
        shape_bool: '{{ .visual.nord.nord8 }}'
        shape_closure: { fg: '{{ .visual.nord.nord8 }}' attr: 'b' }
        shape_custom: '{{ .visual.nord.nord14 }}'
        shape_datetime: { fg: '{{ .visual.nord.nord8 }}' attr: 'b' }
        shape_directory: '{{ .visual.nord.nord8 }}'
        shape_external: '{{ .visual.nord.nord8 }}'
        shape_external_resolved: '{{ .visual.nord.nord8 }}'
        shape_externalarg: { fg: '{{ .visual.nord.nord14 }}' attr: 'b' }
        shape_filepath: '{{ .visual.nord.nord8 }}'
        shape_flag: { fg: '{{ .visual.nord.nord9 }}' attr: 'b' }
        shape_float: { fg: '{{ .visual.nord.nord11 }}' attr: 'b' }
        shape_garbage: { fg: '{{ .visual.nord.nord6 }}' bg: '{{ .visual.nord.nord11 }}' attr: 'b' }
        shape_glob_interpolation: { fg: '{{ .visual.nord.nord8 }}' attr: 'b' }
        shape_globpattern: { fg: '{{ .visual.nord.nord8 }}' attr: 'b' }
        shape_int: { fg: '{{ .visual.nord.nord15 }}' attr: 'b' }
        shape_internalcall: { fg: '{{ .visual.nord.nord8 }}' attr: 'b' }
        shape_keyword: { fg: '{{ .visual.nord.nord15 }}' attr: 'b' }
        shape_list: { fg: '{{ .visual.nord.nord8 }}' attr: 'b' }
        shape_literal: '{{ .visual.nord.nord9 }}'
        shape_match_pattern: '{{ .visual.nord.nord14 }}'
        shape_matching_brackets: { attr: 'u' }
        shape_nothing: '{{ .visual.nord.nord11 }}'
        shape_operator: '{{ .visual.nord.nord13 }}'
        shape_or: { fg: '{{ .visual.nord.nord15 }}' attr: 'b' }
        shape_pipe: { fg: '{{ .visual.nord.nord15 }}' attr: 'b' }
        shape_range: { fg: '{{ .visual.nord.nord13 }}' attr: 'b' }
        shape_raw_string: { fg: '{{ .visual.nord.nord7 }}' attr: 'b' }
        shape_record: { fg: '{{ .visual.nord.nord8 }}' attr: 'b' }
        shape_redirection: { fg: '{{ .visual.nord.nord15 }}' attr: 'b' }
        shape_signature: { fg: '{{ .visual.nord.nord14 }}' attr: 'b' }
