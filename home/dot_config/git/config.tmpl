[color]
  ui = true
[commit]
  gpgsign = true
[credential]
  helper = {{ index .git.credential .chezmoi.os }}
[core]
  autocrlf = input
  editor = nvim
  filemode = false
  ignorecase = false
  pager = delta
[delta]
  navigate = true
  syntax-theme = Nord
  side-by-side = true
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[gpg]
  format = ssh
[gpg "ssh"]
  allowedSignersFile = {{ ternary "~/.ssh/personal.pub" "~/.ssh/work.pub" .isPersonal }}
[help]
  autocorrect = 1
[interactive]
  diffFilter = delta --color-only
[init]
  defaultBranch = main
[merge]
  conflictStyle = zdiff3
[push]
  autoSetupRemote = true
[user]
  name = "Yihuang Yu"
  email = {{ (ternary .user.personal.email .user.work.email .isPersonal) | quote }}
  signingkey = {{ ternary "~/.ssh/personal.pub" "~/.ssh/work.pub" .isPersonal }}
